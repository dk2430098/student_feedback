<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/header') %>
        <title>Security Dashboard</title>
</head>

<body class="bg-gray-50 flex flex-col min-h-screen">

    <%- include('partials/navbar') %>

        <!-- Main Content -->
        <div class="flex-grow container mx-auto px-4 mt-28 mb-16">

            <div class="flex justify-between items-center mb-8">
                <h1 class="text-3xl font-bold serif-font text-slate-800">Security Dashboard</h1>
                <div class="text-sm text-slate-500">
                    Logged in as <span class="font-bold text-blue-600">Officer</span>
                </div>
            </div>

            <div class="grid gap-6">
                <% if (feedbacks.length===0) { %>
                    <div class="bg-white p-12 rounded-3xl shadow-sm text-center border border-gray-100">
                        <div class="text-6xl mb-4">✅</div>
                        <h3 class="text-xl font-bold text-slate-700">All Clear</h3>
                        <p class="text-slate-500">No active security or hostel reports found.</p>
                    </div>
                    <% } else { %>
                        <% feedbacks.forEach(function(item) { %>
                            <div
                                class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all flex flex-col md:flex-row gap-6 items-start">
                                <div class="flex-shrink-0">
                                    <% if (item.category==='Security' ) { %>
                                        <div
                                            class="w-12 h-12 bg-red-100 text-red-600 rounded-xl flex items-center justify-center text-xl">
                                            <i class="bi bi-shield-exclamation"></i>
                                        </div>
                                        <% } else { %>
                                            <div
                                                class="w-12 h-12 bg-orange-100 text-orange-600 rounded-xl flex items-center justify-center text-xl">
                                                <i class="bi bi-house-exclamation"></i>
                                            </div>
                                            <% } %>
                                </div>
                                <div class="flex-grow">
                                    <div class="flex items-center gap-2 mb-2">
                                        <span
                                            class="px-2 py-1 rounded-md text-xs font-bold uppercase tracking-wider
                                    <%= item.category === 'Security' ? 'bg-red-50 text-red-700' : 'bg-orange-50 text-orange-700' %>">
                                            <%= item.category %>
                                        </span>
                                        <span class="text-slate-400 text-sm">• Student ID: <%= item.studentId %></span>
                                    </div>
                                    <p class="text-slate-700 leading-relaxed">
                                        <%= item.message %>
                                    </p>
                                </div>
                                <div class="flex-shrink-0">
                                    <button class="text-slate-400 hover:text-blue-600 transition-colors p-2"
                                        title="Mark as Read">
                                        <i class="bi bi-check-circle text-xl"></i>
                                    </button>
                                </div>
                            </div>
                            <% }); %>
                                <% } %>
            </div>

        </div>

        <%- include('partials/footer') %>

</body>

</html>