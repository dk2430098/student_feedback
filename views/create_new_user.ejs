<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New User</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Full viewport height */
            padding-top: 150px; /* Ensures content isn't overlapped by navbar */
        }
        .relative {
            position: relative;
        }
        .toggle-icon {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }
    </style>
</head>
<body class="flex justify-center items-center h-screen bg-gray-100">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-primary w-100 py-3 shadow-lg fixed-top">
        <div class="container-fluid d-flex justify-content-between align-items-center px-3">
            <!-- Left: Logo & Title -->
            <div class="d-flex align-items-center">
                <div id="logo" class="rounded-circle overflow-hidden bg-cover me-2"
                     style="width: 50px; height: 50px; background-image: url('nitm_logo.jpeg');"></div>
                <h2 class="text-white text-lg fs-4 fw-bold text-decoration-underline m-0">
                    NIT Manipur Student-Feedback Portal
                </h2>
            </div>
        </div>
    </nav>

    <!-- Create User Form -->
    <div class="bg-white shadow-lg p-6 rounded-lg w-full max-w-md">
        <h1 class="text-center text-2xl font-bold text-gray-700 mb-4">Create New User</h1>
        <form action="/create_user" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Enrollment Number</label>
                <input type="text" name="username" id="username" class="form-control" placeholder="Enrollment Number" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Enter Password</label>
                <div class="relative">
                    <input type="password" name="password" id="password" class="form-control pr-10" placeholder="Password" required>
                    <span id="toggle-password" class="toggle-icon text-gray-500">üëÅÔ∏è</span>
                </div>
                <p id="password-instruction" class="text-sm text-gray-500 mt-1 hidden">
                    Please enter a strong password using uppercase, lowercase, digits, and symbols.
                </p>
            </div>

            <div class="mb-3">
                <label for="confirm" class="form-label">Confirm Password</label>
                <div class="relative">
                    <input type="password" name="confirm" id="confirm" class="form-control pr-10" placeholder="Confirm Password" required>
                    <span id="toggle-confirm" class="toggle-icon text-gray-500">üëÅÔ∏è</span>
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="E-mail" required>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition duration-300">
                Submit
            </button>
        </form>
    </div>

    <footer class="text-center text-white py-3 w-100 mt-auto bg-primary">
        <p>&copy; 2025 <a href="https://www.nitmanipur.ac.in/">NIT Manipur - All Rights Reserved</a></p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        const passwordField = document.getElementById("password");
        const confirmPasswordField = document.getElementById("confirm");
        const passwordInstruction = document.getElementById("password-instruction");
        const togglePassword = document.getElementById("toggle-password");
        const toggleConfirm = document.getElementById("toggle-confirm");

        // Show password instruction dynamically
        passwordField.addEventListener("input", function() {
            if (passwordField.value.length > 0) {
                passwordInstruction.classList.remove("hidden");
            } else {
                passwordInstruction.classList.add("hidden");
            }
        });

        // Toggle password visibility
        function toggleVisibility(inputField, toggleIcon) {
            if (inputField.type === "password") {
                inputField.type = "text";
                toggleIcon.textContent = "üîí"; // Lock symbol
            } else {
                inputField.type = "password";
                toggleIcon.textContent = "üëÅÔ∏è"; // Eye symbol
            }
        }

        togglePassword.addEventListener("click", function() {
            toggleVisibility(passwordField, togglePassword);
        });

        toggleConfirm.addEventListener("click", function() {
            toggleVisibility(confirmPasswordField, toggleConfirm);
        });
    </script>
</body>
</html>
